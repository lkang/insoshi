<%- column_div :type => :primary do -%>


  <% if @photo.title.nil?%>
    <h2>Photo</h2>
  <%- else -%>
    <h2><%= h(@photo.title)%></h2>
  <% end %>


  <p><%= link_to "Go to gallery", gallery_path(@photo.gallery) %></p>
  
  <div class = "photo">
    <%= image_tag(@photo.public_filename) %>
  </div>

  <%- unless @photo.comments.empty? -%>
  <h4 id="comments">Comments</h4>
    <ul class="list comments full">
      <%= render :partial => 'comment', :collection => @photo.comments %>
    </ul>
  <%- end -%>
  
  <%- if logged_in? -%>
    <h4>Leave a comment</h4>
    <p><%= formatting_note %></p>

    <% form_for :comment, :url => photo_comments_path(@photo), 
                :html => { :id => "photocomment" } do |f| %>
      <div class="form_row">
        <%= f.text_area :body, :rows => 2 %>
      </div>
 
      <div class="form_row">
        <%= submit_tag "Submit", :class => "button" %>
      </div>
    <% end %>

  <% end %>
<% end %>

<%- column_div :type => :secondary do -%>
  <%= render :partial => 'shared/minifeed' %>
<%- end-%>
  
  
