<%- column_div :type => :primary do -%>

  <h2>
  <%= link_to "#{h @guitar.person.name}'s Guitars", guitars_tab_path(@guitar) %>
  </h2>

  <ul class="list guitar full">
    <%= render :partial => 'guitars/guitar', :object => @guitar %>
  </ul>


  <%- unless @guitar.comments.empty? -%>
  <h4 id="comments">Comments | 
 
   <%= link_to_remote " show all", 
                     :url => {:action => "justcomments", :id => @guitar.id } %>
  </h4>

    <ul id="ajaxcomments" class="list comments full">
    </ul>
  <%- end -%>

  <%- if logged_in? -%>
    <h4>Leave a comment</h4>
    <%= render :partial => 'comments/newcomment',
               :locals => {:inputurl => guitar_comments_path(@guitar) } %>

  <%- end -%>

<%- end -%>

  <%- column_div :type => :secondary do -%>
    <%= render :partial => 'shared/minifeed' %>
  <%- end -%>
