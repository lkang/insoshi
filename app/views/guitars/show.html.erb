<%- column_div :type => :primary do -%>

  <h2>
  <%= link_to "#{h @guitar.person.name}'s Guitars", guitars_tab_path(@guitar) %>
  </h2>

  <ul class="list guitar full">
    <%= render :partial => 'guitars/guitar', :object => @guitar %>
  </ul>


  <%- unless @guitar.comments.empty? -%>
  <h4 id="comments">Comments</h4>
    <ul class="list comments full">
      <%= render :partial => 'comment', :collection => @guitar.comments %>
    </ul>
  <%- end -%>

  <%- if logged_in? -%>
    <h4>Leave a comment</h4>

    <p><%= formatting_note %></p>

    <% form_for :comment, :url => guitar_comments_path(@guitar),
                          :html => { :id => "guitarcomment" } do |f| %>
      <div class="form_row">
        <%= f.text_area :body, :rows => 2 %>
      </div>

      <div class="form_row">
        <%= submit_tag "Submit", :class => "button" %>
      </div>
    <% end %>

  <%- end -%>

<%- end -%>

  <%- column_div :type => :secondary do -%>
    <%= render :partial => 'shared/minifeed' %>
  <%- end -%>
