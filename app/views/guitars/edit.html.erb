<h2>Editing Guitar</h2>

<% form_for(@guitar) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :specs %><br />
    <%= f.text_area :specs, :rows => 5 %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 5%>
  </p>
  <p>
    <%= f.submit "Update", :class => 'button' %>
  </p>
<% end %>

<%= link_to 'Show', @guitar %>
